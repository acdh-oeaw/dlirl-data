         <entry xml:id="aliotripolis-dlgenr"
                xml:lang="en"
                type="mainEntry"
                prev="#alio-dlgenr"
                next="#alteksiyya-dlgenr"
                source="Genesis Rabbah">
            <form type="lemma" opt="false">
               <orth type="lemma" xml:lang="jpa" opt="false" select="true">אליותריפוליס</orth>
               <orth type="transliteration" xml:lang="fjb" opt="false">ʾlywtrypwlys</orth>
               <pron notation="rabbinic" opt="false">aliotripolis</pron>
               <gramGrp opt="false">
                  <gram type="pos" opt="false">noun</gram>
                  <gram type="gen" opt="false">pr.</gram>
               </gramGrp>
               <form type="variant" opt="false">
                  <orth type="variant" xml:lang="jpa" opt="false">אליותרופוליס</orth>
                  <orth type="transliteration" xml:lang="fjb" opt="false">ʾlywtrwpwlys</orth>
                  <pron notation="rabbinic" opt="false">aliotropolis</pron>
               </form>
               <form type="variant" source="Vat1" opt="false">
                  <orth type="variant" xml:lang="jpa" opt="false">אליו ותרופוליס</orth>
               </form>
               <form type="variant" source="Ox2" opt="false">
                  <orth type="variant" xml:lang="jpa" opt="false">אליותרי</orth>
               </form>
               <form type="variant" source="Ox1" opt="false">
                  <orth type="variant" xml:lang="jpa" opt="false">אילונות מטריפולין</orth>
               </form>
               <form type="variant" source="K V" opt="false">
                  <orth type="variant" xml:lang="jpa" opt="false">זו מטרופוליס</orth>
               </form>
            </form>
            <sense xml:id="aliotripolis-dlgenr-1" opt="false">
               <usg type="domain" opt="false"/>
               <cit type="translation" xml:lang="en" subtype="sense">
                  <quote>name of a city</quote>
               </cit>
               <cit type="translationEquivalent" xml:lang="grc">
                  <usg opt="false">
                     <lang opt="false">Classical Greek</lang>
                  </usg>
                  <quote>Ἐλευθερόπολις</quote>
               </cit>
               <cit type="example" xml:lang="jpa">
                  <quote>[ואת החרי] אליותריפוליס, למה קורא אותה אליותריפוליס שבררו אותה ויצאת להם לחירות בדור הפלגה.</quote>
                  <bibl default="false" status="draft">
                     <ref type="witness">41 (42),6</ref>
                     <ref type="witness">I 412: 1</ref>
                  </bibl>
                  <cit type="translation" xml:lang="en">
                     <quote>And the Hori (Gen 14,6): This is Aliotropolis [the Free City]. Why is it called Aliotropolis? Because it was selected to be a Free City during the generation of the dispersion [from the Tower of Babylon].</quote>
                  </cit>
               </cit>
            </sense>
