            <sense xml:id="antropiyah-dlgenr-1" opt="false">
               <usg type="domain" opt="false">human life/biology</usg>
               <usg type="socioCultural" norm="borrowing" opt="false">code-switching</usg>
               <usg type="normativity" opt="false">ad-hoc formation</usg>
