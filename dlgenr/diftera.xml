               <gramGrp opt="false">
                  <gram type="pos" opt="false">noun</gram>
                  <gram type="gen" opt="false">m./f.</gram>
               </gramGrp>
               <form type="variant" opt="false">
                  <orth type="variant" xml:lang="jpa" opt="false">דיפטרא</orth>
                  <orth type="transliteration" xml:lang="fjb" opt="false">dypṭrʾ</orth>
                  <pron notation="rabbinic" opt="false">difṭeraʾ</pron>
               </form>
               <form type="variant" source="Ox1" opt="false">
                  <orth type="variant" xml:lang="jpa" opt="false">דפטריות</orth>
               </form>
