               <orth type="lemma" xml:lang="jpa" opt="false" select="true">סיסרנון</orth>
               <orth type="transliteration" xml:lang="fjb" opt="false">sysrnwn</orth>
               <pron notation="rabbinic" opt="false">sisarnon</pron>
               <gramGrp opt="false">
                  <gram type="pos" opt="false">noun</gram>
                  <gram type="gen" opt="false">m.</gram>
               </gramGrp>
               <form type="variant" source="Vat1" opt="false">
