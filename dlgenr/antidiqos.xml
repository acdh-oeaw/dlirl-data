         <entry xml:id="antidiqos-dlgenr"
                xml:lang="en"
                type="mainEntry"
                prev="#antigrafa-dlgenr"
                next="#antiqesar-dlgenr"
                source="Genesis Rabbah">
            <form type="lemma" opt="false">
               <orth type="lemma" xml:lang="jpa" opt="false" select="true">אנטידיקוס</orth>
               <orth type="transliteration" xml:lang="fjb" opt="false">ʾnṭydyqws</orth>
