               <cit type="example" xml:lang="jpa">
                  <quote>בי אדני בייא את עביד בייא אדני</quote>
                  <bibl default="false" status="draft">
                     <ref type="witness">93,6</ref>
                     <ref type="witness">III 1155:2</ref>
                  </bibl>
                  <cit type="translation" xml:lang="en">
                     <quote>Bi adoni – you do violence/injustice to us, my lord.</quote>
                  </cit>
               </cit>
            </sense>
            <sense n="2" xml:id="biyyah-dlgenr-2" opt="false">
               <usg type="domain" opt="false">administration/law</usg>
               <usg type="socioCultural" norm="borrowing" opt="false">code-switching</usg>
