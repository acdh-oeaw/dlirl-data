               <gramGrp opt="false">
                  <gram type="pos" opt="false">noun</gram>
                  <gram type="gen" opt="false">m.</gram>
               </gramGrp>
               <form type="variant" opt="false">
                  <orth type="variant" xml:lang="jpa" opt="false">פניס</orth>
                  <orth type="transliteration" xml:lang="fjb" opt="false">pnys</orth>
                  <pron notation="rabbinic" opt="false">panis</pron>
               </form>
               <form type="variant" source="3,1 - K" opt="false">
                  <orth type="variant" xml:lang="jpa" opt="false">פניסין</orth>
               </form>
               <form type="variant" source="3,1 - V Ox1" opt="false">
                  <orth type="variant" xml:lang="jpa" opt="false">פנסין</orth>
               </form>
               <form type="variant" source="3,1 - Vat2" opt="false">
                  <orth type="variant" xml:lang="jpa" opt="false">פנסים</orth>
               </form>
