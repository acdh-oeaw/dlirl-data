               <bibl default="false" status="draft">
                  <title>Sokoloff, DJPA</title>
                  <citedRange>234a</citedRange>
               </bibl>
               <bibl default="false" status="draft">
                  <title>Sperber (1984)</title>
                  <citedRange>99-101</citedRange>
               </bibl>
            </ref>
