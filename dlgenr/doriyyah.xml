                  <gram type="pos" opt="false">noun</gram>
                  <gram type="gen" opt="false">f.</gram>
               </gramGrp>
               <form type="variant"
                     source="53,7 - Vat1 Vat2 Ox1 Ox2; 53,8 - Vat2 Ox2"
                     opt="false">
