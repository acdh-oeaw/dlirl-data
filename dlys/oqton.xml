         <entry xml:id="oqton-ys"
            type="mainEntry"
            xml:lang="en"
            prev="#"
            next="#"
            source="Yalkut Shimoni">
            <form type="lemma">
               <orth type="lemma" xml:lang="jpa" opt="false" select="true">אוקטון</orth>
               <orth type="transliteration" xml:lang="fjb" opt="false">ʾwqṭwn</orth>
               <pron notation="rabbinic" opt="false">oqṭon</pron>
               <gramGrp>
                  <gram type="pos">numeral</gram>
               </gramGrp>
               <form type="variant">
                  <orth type="variant" xml:lang="jpa">אכטו</orth>
                  <orth type="transliteration" xml:lang="fjb">ʾkṭw</orth>
                  <pron notation="rabbinic">okṭo</pron>
               </form>
               <form type="variant">
                  <orth type="variant" xml:lang="jpa">אוכטו</orth>
                  <orth type="transliteration" xml:lang="fjb">ʾwqṭw</orth>
                  <pron notation="rabbinic">okṭo</pron>
               </form>
               <form type="variant">
                  <orth type="variant" xml:lang="jpa">אוקטו</orth>
                  <orth type="transliteration" xml:lang="fjb">ʾwqṭw</orth>
                  <pron notation="rabbinic">ʾoqṭo</pron>
               </form>
            </form>
            <sense xml:id="oqton-ys-1">
               <cit type="translation" xml:lang="en" subtype="sense">
                  <quote>eight</quote>
               </cit>
               <cit type="translationEquivalent" xml:lang="grc">
                  <quote>ὀκτώ</quote>
               </cit>
               <cit type="example" xml:lang="jpa">
                  <quote>אמר להון מדידכון אנא, מדידכון אנא ממטי לכון זיטא איפטה איטה אוקטו</quote>
                  <bibl>
                     <ref type="witness">Yalq 20</ref>
                     <ref type="witness">I 64: 82</ref>
                  </bibl>
                  <ref type="entry" xml:lang="jpa">איטה</ref>
                  <ref type="entry" xml:lang="jpa">איפטה</ref>
                  <ref type="entry" xml:lang="jpa">זיטא</ref>
                  <cit type="translation" xml:lang="en">
                     <quote>He replied to them: From your own [language] I will prove it to you: “Zeṭaʾ (live) epṭah (seven), eṭah (go) akṭo (eight)” (cf. Freedman / Simon I 112)</quote>
                  </cit>
               </cit>
               <cit type="example" xml:lang="jpa">
                  <quote>אמ' להן בלשון יוונית זיטא איפטא, איטא אוקטו</quote>
                  <bibl>
                     <ref type="witness">Yalq 692</ref>
                     <ref type="witness">VII 16: 33</ref>
                  </bibl>
                  <ref type="entry" xml:lang="jpa">איטא</ref>
                  <ref type="entry" xml:lang="jpa">איפטא</ref>
                  <ref type="entry" xml:lang="jpa">זיטא</ref>
                  <cit type="translation" xml:lang="en">
                     <quote>He replied to them: From your own [language] I will prove it to you: “Zeṭaʾ (live) epṭah (seven), eṭah (go) akṭo (eight)” (cf. Freedman / Simon I 112)</quote>
                  </cit>
                  <note>= <bibl type="ancient">GenR 14,2 [I 127: 3]</bibl> (<term xml:lang="jpa">אכתו</term>); <bibl type="ancient">GenR 20,6 [I 189: 3]</bibl> (<term xml:lang="jpa">אוקטון</term>); <bibl type="ancient">NumR 4,3</bibl> (<term xml:lang="jpa">אוכטי</term>); <bibl type="ancient">Tanh Bemidbar 18</bibl> (corr.): <term xml:lang="jpa">ארנון</term> <term xml:lang="fjb">ʾrnwn</term> (in Yalq emend.); <bibl type="ancient">TanhB Bemidbar 21</bibl>: <term xml:lang="jpa">אקטו</term> <term xml:lang="fjb">ʾqṭw</term> <term xml:lang="rabbinic">aqṭo</term>; <bibl type="ancient">yYev 5d: 7</bibl> - (corr.)</note>
               </cit>
            </sense>
