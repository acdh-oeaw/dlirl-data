  <text>
      <body>
         <entry xml:id="hatlis-ys"
            type="mainEntry"
            xml:lang="en"
            prev="#"
            next="#"
            source="Yalkut Shimoni">
            <form type="lemma">
               <orth type="lemma" xml:lang="jpa" opt="false" select="true">הטליס</orth>
               <orth type="transliteration" xml:lang="fjb" opt="false">hṭlys</orth>
               <pron notation="rabbinic">haṭlis</pron>
               <gramGrp>
                  <gram type="pos">noun</gram>
                  <gram type="gen">m.</gram>
               </gramGrp>
               <form type="variant">
                  <orth type="variant" xml:lang="jpa">אטליס</orth>
                  <orth type="transliteration" xml:lang="fjb">ʾṭlys</orth>
                  <pron notation="rabbinic">ʾaṭlis</pron>
               </form>
            </form>
            <sense xml:id="hatlis-ys-1">
               <cit type="translation" xml:lang="en" subtype="sense">
                  <quote>unaccomplished, alone, free, unmarried</quote>
               </cit>
               <cit type="translationEquivalent" xml:lang="grc">
                  <quote>ἀτελής</quote>
               </cit>
               <cit type="example" xml:lang="jpa">
                  <quote>מה את סבור שאני מתה ואת יושב אטליס</quote>
                  <bibl>
                     <ref type="witness">Yalq 27</ref>
                     <ref type="witness">I 93: 30</ref>
                  </bibl>
                  <cit type="translation" xml:lang="en">
                     <quote>... maybe I will die and you will remain unmarried.</quote>
                  </cit>
                  <note>= <bibl type="ancient">GenR 19,5 [I 174: 7]</bibl>; <bibl type="ancient">20,8 [I 191: 12]</bibl> (<term xml:lang="jpa">היטליס</term>)</note>
               </cit>
               <cit type="example" xml:lang="jpa">
                  <quote>א"ל הק' הטלס, חייך, שאני מגרה בך את הדוב</quote>
                  <bibl>
                     <ref type="witness">Yalq 145</ref>
                     <ref type="witness">II 750: 43</ref>
                  </bibl>
                  <cit type="translation" xml:lang="en">
                     <quote>... The Lord said to him: [You are] alone [now], by your life: I will incite the she-bear against you.</quote>
                  </cit>
                  <note>= <bibl type="ancient">GenR 87,4 [III 1064: 2]</bibl></note>
               </cit>
               <cit type="example" xml:lang="jpa">
                  <quote>אמר לו הקב"ה 
                  <app>
                     <lem>הטליס</lem>
                     <rdg wit="#Ven">העלם</rdg>
                  </app>, חייך שאני מגרה בך את הדוב</quote>
                  <bibl>
                     <ref type="witness">Yalq Job 920</ref>
                     <ref type="witness">509: 4</ref>
                  </bibl>
                  <note>= <bibl type="ancient">GenR 87,4 [III 1064: 2]</bibl></note>
               </cit>
            </sense>
            <note>Cf. GenR <ref type="entry" xml:lang="jpa">הטליס</ref>. For Job 920 cf. <ref type="entry" xml:lang="jpa">איטוליס</ref></note>
            <ref type="bibliography">
               <bibl>
                  <title>Krauss, LW II</title>
                  <citedRange>225b</citedRange>
               </bibl>
            </ref>
         </entry>
