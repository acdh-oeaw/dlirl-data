            <form type="lemma">
               <orth type="lemma" xml:lang="jpa" opt="false" select="true">איסטרטיוט</orth>
               <orth type="transliteration" xml:lang="fjb" opt="false">ʾysṭrṭywṭ</orth>
               <pron notation="rabbinic" opt="false">isṭraṭioṭ</pron>
