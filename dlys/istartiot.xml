                  <gram type="pos">noun</gram>
                  <gram type="gen">m.</gram>
               </gramGrp>
               <form type="variant">
                  <orth type="variant" xml:lang="jpa">אסטרטיוט</orth>
                  <orth type="transliteration" xml:lang="fjb">ʾsṭrṭywṭ</orth>
                  <pron notation="rabbinic">isṭraṭioṭ</pron>
               </form>
               <form type="inflected">
