            <form type="lemma">
               <orth type="lemma" xml:lang="jpa" opt="false" select="true">קולסי</orth>
               <orth type="transliteration" xml:lang="fjb" opt="false">qwlsy</orth>
               <pron notation="rabbinic">qolase</pron>
               <gramGrp>
                  <gram type="pos">noun</gram>
                  <gram type="gen">f.</gram>
               </gramGrp>
               <form type="variant">
                  <orth type="variant" xml:lang="jpa">קולסיתה</orth>
                  <orth type="transliteration" xml:lang="fjb">qwlsyth</orth>
                  <pron notation="rabbinic">qolsitah</pron>
                  <gramGrp>
                     <gram type="pos">det.</gram>
                  </gramGrp>
               </form>
               <form type="inflected">
                  <orth type="inflected" xml:lang="jpa">קולסוון</orth>
                  <orth type="transliteration" xml:lang="fjb">qwlswwn</orth>
                  <pron notation="rabbinic">qolsawan</pron>
                  <gramGrp>
                     <gram type="num">pl.</gram>
                  </gramGrp>
               </form>
               <form type="inflected">
                  <orth type="inflected" xml:lang="jpa">קולסין</orth>
                  <orth type="transliteration" xml:lang="fjb">qwlsyn</orth>
                  <pron notation="rabbinic">qolsin</pron>
