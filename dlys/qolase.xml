                  </gramGrp>
               </form>
               <form type="inflected">
                  <orth type="inflected" xml:lang="jpa">קולוסין</orth>
                  <orth type="transliteration" xml:lang="fjb">qwlwsyn</orth>
                  <pron notation="rabbinic">qolosin</pron>
