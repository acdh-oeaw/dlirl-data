               <orth type="lemma" xml:lang="jpa" opt="false" select="true">פמלניא</orth>
               <orth type="transliteration" xml:lang="fjb" opt="false">pmlnyʾ</orth>
               <pron notation="rabbinic" opt="false">famalnia</pron>
               <gramGrp>
                  <gram type="pos">noun</gram>
                  <gram type="gen">pl.</gram>
               </gramGrp>
               <form type="variant">
                  <orth type="variant" xml:lang="jpa" opt="false" select="true">פמלליא</orth>
                  <orth type="transliteration" xml:lang="fjb" opt="false">pmllyʾ</orth>
               </form>
               <form type="variant">
                  <orth type="variant" xml:lang="jpa" opt="false" select="true">פמליא</orth>
