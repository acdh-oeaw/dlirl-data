         <entry xml:id="demosnai-ys"
            type="mainEntry"
            xml:lang="en"
            prev="#dimosia-dlgenr"
            next="#dimos-dlgenr"
            source="Yalkut Shimoni">
            <form type="lemma">
               <orth type="lemma" xml:lang="jpa" opt="false" select="true">דימוסנאי</orth>
               <orth type="transliteration" xml:lang="fjb" opt="false">dymwsnʾy</orth>
               <pron notation="rabbinic">demosnaʾi</pron>
            </form>
            <sense xml:id="demosnai-ys-1">
               <cit type="translation" xml:lang="en" subtype="sense">
                  <quote>collectors of public revenues</quote>
               </cit>
               <cit type="translationEquivalent" xml:lang="grc">
                  <quote> δεμοσιῶναι</quote>
               </cit>
               <cit type="example" xml:lang="jpa">
                  <quote>תנו רבנן בכ"ה בניסן אתנטול דימוסנאי מיהודה ומירושלים</quote>
                  <bibl>
                     <ref type="witness">Yalq 110</ref>
                     <ref type="witness">II 503: 60</ref>
                  </bibl>
                  <cit type="translation" xml:lang="en">
                     <quote>The rabbis have taught: On the 25th of Nissan, the collectors of public revenues were removed from Judah and Jerusalem.</quote>
                  </cit>
                  <note>= <bibl type="ancient">MegTaan 3</bibl>; <bibl type="ancient">bSan 91a</bibl></note>
               </cit>
            </sense>
            <note>Cf. <bibl type="modern">Levy I 397a</bibl>; <bibl type="modern">Jastrow 300b</bibl>; <bibl type="modern">AC III 88a</bibl>.</note>
            <ref type="bibliography">
               <bibl>
                  <title>Krauss, LW II</title>
                  <citedRange>206b</citedRange>
               </bibl>
            </ref>
         </entry>
